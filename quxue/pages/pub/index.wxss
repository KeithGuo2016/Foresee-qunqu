/* pages/pub/index.wxss */
@import "../editor/editor.wxss";
@import "/welCropper/welCropper.wxss";
.pub_tit{
  font-size: 28rpx;
  color: #333;
  margin: 20rpx 0;
}
label{
  font-size: 28rpx;
  color: #333;
  margin-right: 30rpx;
  }
radio .wx-radio-input{
  width: 40rpx;
  height: 40rpx;
}
.intit{
   flex: 1;
  font-size: 30rpx;
  line-height: 32rpx;
  padding: 15rpx 10rpx;
  background: #efefef;
  border-radius: 10rpx;
  height: 40rpx;
  width: 100%;
}
.pub_tag{
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
}
.pub_tag view{
  width: 150rpx;
  padding: 5rpx 0;
  margin-bottom: 20rpx;
  border: 1px solid #b2b2b2;
  font-size: 30rpx;
  text-align: center;
  color: #333;
  border-radius: 10rpx;
}
.pub_tag view.cur{
  border: 1px solid #38bab8;
  background: #38bab8;
  color: #fff;
}
.label{
  display: flex;
  font-size: 28rpx;
  color: #333;
}
.upload_icon image{
  vertical-align: middle;
  margin: 0 0 0 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.upload_img image{
  width: 200rpx;
  height: 200rpx;
}
.pub_txt{
  font-size: 28rpx;
  color: #333;
}
.pub_txt input{
  width: 60%;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
}
.pub_area{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 1px solid #efefef;
  line-height: 48rpx;
}
.alarm_picker{
  display: inline-block;
  width: 250rpx;
  height: 46rpx;
}
.pub_txt input.pri{
  width: 245rpx;
  margin-right: 0;
}
.wrtbtn{
  display: flex;
  justify-content: space-between;
}
.coll_tem{
  width: 25%; height: 52rpx;
  border: 1px solid #cacaca;
  margin: 30rpx 0;
  border-radius: 30rpx;
  color: #cacaca;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
}
.coll_temimg{
  
  height: 52rpx;
  margin: 30rpx 0 0 10rpx;
  border-radius: 30rpx;
  color: #cacaca;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
}
.upload_icon image{
  vertical-align: middle;
  margin: 0 0 0 0rpx;
  width: 80rpx;
  height: 40rpx;
}
.upload_icon2 image{
  vertical-align: middle;
  margin: 0 0 0 0rpx;
  width: 52rpx;
  height: 52rpx;
}
.pub_btn{
  width: 50%;
  border-radius: 30rpx;
  font-size: 28rpx;
  height: 52rpx;
  line-height: 50rpx;
  color: #fff;
  margin: 30rpx auto;
  background:#38bab8;

}
.labeltextarea{
  display: flex;
  width: 100%; 
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #0B0B0B;
  justify-content: center;
}
.positionviewbg{
display: flex;
position: absolute;
margin: 394rpx 0 0 290rpx;
}