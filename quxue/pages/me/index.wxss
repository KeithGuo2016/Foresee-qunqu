/* pages/me/index.wxss */
.top{
  display: flex;
  justify-content: space-between;
  width: 98%; height: 150rpx;
  background: #8EC4C3;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  margin-left: 1%;
  margin-right: 1%;
  
}

.topl,.topr{margin: 20rpx;}
.topl text{
  font-size: 30rpx;
  font-weight: bold;
  display: block;
}
.topr image{width: 50rpx; height: 50rpx;margin-top:30rpx;}
.avator{
  position: relative;
  width: 100rpx;
  text-align: center;
  margin: -70rpx auto 0;
}
.vip{
  position: absolute;
  top: -5rpx;
  right: -5rpx;
}
.avator image{width: 96rpx; height: 96rpx; border-radius: 50%;}
.vip image{
  width: 34rpx;
  height: 30rpx;
}
.leader{
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #38bab8;
}
.limg{
  width: 35rpx; height: 35rpx;
  background: #38bab8;
  border-radius: 50%;
  display: inline-block;
  margin-right: 10rpx;
}
.leader image{
  width: 20rpx;
  height: 18rpx;
}
.name{
  font-size: 36rpx;
  color: #333;
}
.des{
  font-size: 26rpx;
  color: #bababa;
  margin: 10rpx 0;
}
.btn{
  width: 300rpx; height: 60rpx;
  margin: 10rpx auto 30rpx;
  border: 1px solid #38bab8;
  border-radius: 50rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #38bab8;
}
.btn image{
  vertical-align: middle;
  width: 34rpx; height: 34rpx; 
  margin-right: 10rpx;
  }
.btng{
  border: 1px solid rgba(133,144,144,1);
  color: rgba(133,144,144,1);
}
.user{
  padding: 30rpx;
  font-size: 26rpx;
  color: #0b0b0b;
}
.uslist{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx 0;
}
.usl{margin-top: 5rpx;}
.usl image{
  vertical-align: middle;
  width: 36rpx; height: 36rpx;
  margin-right: 20rpx;
}
.usr{
  font-size: 30rpx;
  color: #bababa;
}
.usr image{
  vertical-align: middle;
  width: 40rpx; height: 40rpx;
  margin-right: 10rpx;
}
.usra{
  display: inline-block;
  font-size: 26rpx;
  margin-right: 20rpx;
}
.show_c{
  height: 700rpx;
  background: #8EC4C3;
  justify-content: space-between;
  width: 98%;
  margin-left: 1%;
  margin-right: 1%;

}
.show_c image{
  width: 320rpx; height: 320rpx;
  margin-top: 30rpx;
  border: 20rpx solid #fff;
  background: #fff;
}
.show_name{
  font-size: 30rpx;
  color: #fff;
  margin-top: 40rpx;
}
.showcode{
  background: #EBEBEB;
}
.show_gray{
  position: absolute;
  top: 750rpx;
  bottom: 0;
  width: 100%;
  height: auto;
  background: #EBEBEB;
}
.show_back{
  position: fixed;
  background: #fff;
  width: 100%;
  padding-bottom: 50rpx;
  bottom: 0;
}
.back_c{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx; height: 100rpx;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 50%;
  margin: -50rpx auto 0;
}
.show_back image{
  width: 50rpx; height: 30rpx; 
}
.s_nik{
  font-size: 32rpx;
  color: #000000;
  margin-top: 20rpx;
}
.usr .ico{
  width: 20rpx;
  height: 38rpx;
}