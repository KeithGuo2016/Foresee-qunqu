/* pages/communityDetail/index.wxss */
@import '../collect/index.wxss';
@import '../community/index.wxss';

.topbox{
  position: relative;
  overflow: hidden;
  width: 100%; 
}
.zhe2{
  display: flex;
  padding: 220rpx 40rpx 34rpx 40rpx;
  background-color: rgba(0, 0, 0, .6)
}
.topimg{
  margin-right: 26rpx;
  text-align: center;
}
.topimg view{
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.topimg image{
  width: 200rpx; 
  height: 200rpx;
  display: block;
}
.toptxt{
  position: relative;
  width: 100%;
}
.topname{
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}
.topdes{
  font-size: 24rpx;
  color: #B2FFFE;
  line-height: 42rpx;
}
.handle{
  position: absolute;
  width: 100%;
  text-align: right;
  bottom: 0;
}
.tabnav{
  padding: 32rpx 0rpx 0rpx 36rpx;
  display: flex;
  font-size: 36rpx;
  color: #535050;
}
.tabnav view{
  margin-right: 50rpx;
}
.cur{
  position: relative;
  color: #38bab8;
}
.cur:after{
  position: absolute;
  left: 20rpx;
  bottom: -4rpx;
  content : '';
  height:5rpx;
  width:32rpx;
  background-color: #38bab8;
}
.into_tit{
  font-size: 28rpx;
  font-weight: 600;
}
.label{
  display: flex;
  margin-top: 26rpx;
  line-height: 40rpx;
}
.lakey{
  font-size: 28rpx;
  color: #B4B2B2;
  text-align: right;
}
.pd40{
  margin-top:80rpx;
}
.laval{
  flex: 1;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #000000;
  font-weight: 300;
}
.info1{
  margin-top: 26rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: 300;
  color: #000000;
  letter-spacing:2rpx;
}
.member{
  display: flex;
  padding: 30rpx 0;
  align-items: center;
  flex-wrap: wrap;
}
.mlist{
  width: 20%;
  padding: 30rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #000000;
}
.mlist image{
  width: 50rpx; 
  height: 50rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto 8rpx auto;
}
.total{
  font-size: 28rpx;
  color: #5A5A5A;
  padding-bottom: 60rpx;
}
.arlist{
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.arlist_l{
  position: relative;
  flex: 1;
}
.atit{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 48rpx;
}
.ainfo{
  position: absolute;
  width: 100%;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #b4b2b2;
}
.arlist_r image{
  width: 160rpx; height: 160rpx;
  margin-left: 30rpx;
}
.join{
  color: #38bab8;
  margin-right: 30rpx;
}
.scrolltxt{padding:0 20rpx;background:#f8f8f8;}
.marquee_box {
  position:relative;
  color:#333;
  height:90rpx;
  display:block;
  overflow:hidden;
  } 
.marquee_text {
  white-space: nowrap;
  position:absolute;top:0;
  font-size:28rpx;
  height:90rpx;
  line-height:90rpx;
  }
.dataimg{
  width: 100%;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}