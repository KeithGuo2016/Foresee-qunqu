.day_nav{
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content:space-around;
  font-size: 28rpx;
  color: #535050;
}
.cur{
  position: relative;
  color: #38bab8;
}
.cur:after{
  position: absolute;
  left: 14rpx;
  bottom: -4rpx;
  content : '';
  height:5rpx;
  width:32rpx;
  background-color: #38bab8;
}
.data_list{
  position: relative;
  padding-left: 32rpx;
  padding-right: 32rpx;
  border-bottom: 10rpx solid #F1F1F1;
}
.data_list:last-child {border-bottom: 0rpx}
.tit{
  padding-top: 30rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 900;
}
.auth{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 8rpx;
  font-size: 24rpx;
  color: #BBB9B9;
  line-height: 24rpx;
}
.dataimg{
  width:100%;
}
.des{
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  padding-left: 8rpx;
  font-size: 24rpx;
  color: #B4B2B2;
}
.detail{
  position: relative;
  font-size: 24rpx;
  color: #b4b2b2;
  overflow: hidden;
  padding-left: 8rpx;
  padding-bottom: 40rpx;
  vertical-align: bottom;
}

.detail .txa{
  color: #0B0B0B;
  font-size: 26rpx;
  font-weight:300
}
.simg{
  vertical-align: bottom;
  width: 40rpx; 
  height: 40rpx;
  margin-left:16rpx;
  margin-right: 8rpx;
}
.zan, .eye{
  display: inline-block;
}
.zan{padding-right: 80rpx;}
.zan image{width: 25rpx; height: 25rpx;
}
.eye image{width: 32rpx; height: 20rpx;
}
swiper{
  display: flex;
  position: fixed;
  width: 100%;
  height: 100%;
}
scroll-view{
  width: 100%;
  height: 90%;
}


